{
  "name": "vibi-showdown",
  "type": "module",
  "scripts": {
    "setup": "npm install && npm run check && npm run check:stats && npm run check:integrity && npm run build:web",
    "setup:run": "npm run setup && npm run dev",
    "check": "tsc --target esnext --noEmit --skipLibCheck",
    "check:stats": "node --experimental-strip-types src/stats_calc-test.ts",
    "check:integrity": "node --experimental-strip-types src/data/integrity.ts",
    "build:web": "bun build vibishowdown/index.ts --outdir vibishowdown/dist --target=browser --format=esm",
    "dev": "node scripts/serve-static.mjs"
  },
  "dependencies": {
    "vibinet": "0.1.1"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
